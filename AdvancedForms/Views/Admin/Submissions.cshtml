@{
}
<style>
    td, th {
        max-width: 200px;
        text-align: center;
        font-size: 14px;
    }
</style>

<h1>Advanced Form Submissions</h1>

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <tr>
            <th>Form Name</th>
            <th></th>
            <th>Submission Date</th>
            <th>Submitted By</th>
            <th></th>
        </tr>
        @foreach (var contentItemSummary in Model)
        {
                @await DisplayAsync(contentItemSummary)
        }
    </table>
}
else
{
    <div class="alert alert-info">
        @T["No result found."]
    </div>
}