@model List<AdvancedForms.ViewModels.AdvFormsDisplayViewModel>

<style>
    #mainNav {
        background-color: #212529 !important;
        padding-top: 0px;
        padding-bottom: 0px;
    }

    #main {
        padding-top: 70px;
    }

    .section-heading {
        margin-top: 35px !important;
    }

    header.masthead {
        display: none;
    }

    section {
        padding: 50px 0;
    }

    .panel-body {
        padding: 0px;
        border-radius: 0px;
    }

    .panel-heading {
        padding: 10px 10px;
        background: #eee;
        margin-top: 20px;
        border: 1px solid rgba(0, 0, 0, 0.125);
        font-size: 18px;
    }

    a, a:hover {
        color: #746d74;
        font-size: 15px;
    }

        a div p {
            cursor: pointer;
        }
</style>

<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">DOWNLOADABLE FORMS</h2>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">@item.Type</div>
                <div class="panel-body">
                    @foreach (var form in item.Items)
                    {
                        <a class="list-group-item list-group-item-action" href="/media/@form.Action" download>
                            <div>
                                <strong>@form.DisplayText</strong>
                                <i class="fa fa-info-circle" data-toggle="tooltip" title="Click title to download form" style="float:right"></i>
                                <br />
                                @Html.Raw(form.Description)
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

